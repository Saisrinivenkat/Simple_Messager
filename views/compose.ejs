
<section class="compose-content">
  <h1 class="compose-title title">Compose</h1>
  <form class="form-cont" action="/compose" method="post">
    <div class="form-group">
      <label class="subtitle">Title: </label>
      <input class="form-control" type="text" name="postTitle">
    </div>
    <div class="message">
      <label class="subtitle">Post:</label>
      <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
    </div>
    <button class="btn " type="submit" name="button">Publish</button>
  </form>
</section>
